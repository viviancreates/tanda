<div id="flash-notice" class="alert alert-success" style="display: none;"></div>
<div id="flash-alert" class="alert alert-danger" style="display: none;"></div>

<div class="container mt-4" id="notice">

  <div class="text-center mb-4">
    <h1><%= @user.first_name.present? ? @user.first_name.capitalize : "User" %>'s Wallet</h1>
    <p>Manage your wallet and transfer funds securely.</p>
  </div>

  <div class="card mb-4">
    <div class="card-body">
      <%= render "user_wallet" %>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <%= render "transfer_funds" %>
    </div>
  </div>
</div>

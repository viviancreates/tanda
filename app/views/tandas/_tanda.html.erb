<div id="<%= dom_id tanda %>" class="mb-4">

  <div class="card shadow-sm">
    <div class="card-header bg-light text-black">
      <h5 class="mb-0"><%= tanda.name %></h5>
    </div>

    <div class="card-body">
      <p class="card-text">
        <strong>Goal amount:</strong>
        <%= tanda.goal_amount %>
      </p>

      <p class="card-text">
        <strong>Current amount:</strong>
        <%= @current_amount %>
      </p>

      <p class="card-text">
        <strong>Due date:</strong>
        <%= tanda.due_date.strftime("%B %d, %Y") %>
      </p>

      <p class="card-text">
        <strong>Created by:</strong>
        <%= tanda.creator.username %>
      </p>

      <p class="card-text">
        <strong>Participants:</strong>
        <ul class="list-unstyled">
          <% tanda.users.each do |user| %>
            <li><i class="fa fa-user"></i> <%= user.username %></li>
          <% end %>
        </ul>
      </p>

      <div class="d-flex justify-content-start">
      <%= link_to "Show Details", tanda_path(tanda), class: "btn btn-primary btn-sm" %>
    </div>

    </div>
  </div>

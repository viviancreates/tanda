<div id="<%= dom_id tanda %>">

  <div class="card">
    <div class="card-header">
      <%= tanda.name %>
    </div>

    <div class="card-body">
      <h5 class="card-title">
        <strong>Goal amount:</strong>
        <%= tanda.goal_amount %>
      </h5>

      <h5 class="card-title">
        <strong>Current amount:</strong>
        <%= tanda.goal_amount %>
      </h5>

      <p>
        <strong>Due date:</strong>
        <%= tanda.due_date %>
      </p>

      <p class="card-text">
        <strong>Created by:</strong>
        <%= tanda.creator.username %>
        <strong>Users:</strong>
        <%= tanda.users %>
      </p>

    </div>
  </div>
